{% extends 'ItsurAeiBundle::layout.html.twig' %}
{% block title %}
    Listado de Usuarios
{% endblock %}

{% block body %}
     
	 <a href="{{ path('user_new') }}" >Nuevo usuario</a>
    
	<table border="1">
		<tr>
		<th>Usuario</th>
		<th>Activo</th>
		<th>Operaciones</th>
		</tr>
	{% for user in users %}
	       <tr>
            <td>	
			{{user.username}} 
			</td>
			<td>
			{{user.isActive}}
			</td>
			<td>
			<a href="{{ path('user_update',{ 'id':user.id } ) }}" >Modificar</a>|
			<a href="{{ path('user_delete',{ 'id':user.id } ) }}" >Eliminar</a>
			</td>
	     </tr>
	 {% else %}
         <tr>
            <td colspan="2">
             No se encontraron usuarios.
	  		</td>
	     </tr>
     {% endfor %}

